# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{java,groovy,kt}]
indent_style = space
indent_size = 4

[*.{bat,txt}]
charset = utf-8-bom
end_of_line = crlf

[*.{html,js,css}]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
